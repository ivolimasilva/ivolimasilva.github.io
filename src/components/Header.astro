---
import Avatar from './Avatar.astro';
import ThemeToggle from './ThemeToggle.astro';
import { links } from '../data/links';
---

<header class="flex flex-col items-center gap-4 lg:flex-row">
	<Avatar />
	<div class="flex flex-col items-center lg:items-start">
		<h1 class="text-2xl font-bold lg:text-xl">Ivo Lima Silva</h1>
		<h2 class="text-l lg:text-md">Software Developer</h2>
	</div>
	<nav class="flex items-center gap-6 lg:ml-auto">
		{
			links.map((link) => (
				<a href={link.url} target="_blank" rel="noopener noreferrer">
					{link.name}
				</a>
			))
		}
		<ThemeToggle />
	</nav>
</header>
